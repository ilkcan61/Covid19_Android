<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#04BFBF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koronavirüs İstatistikleri"
            android:background="#009688"
            android:padding="6dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dünya"
            android:textColor="#fff"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            tools:ignore="NestedWeights">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Vaka"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_totalCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250350"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Ölüm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_totalDeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250350"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam Kurtulan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_totalRecovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1250350"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:orientation="vertical"
                android:visibility="invisible"
                tools:ignore="NestedWeights">

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
               android:text="5 Nisan \n 2020"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:orientation="vertical"
                android:visibility="invisible"
                tools:ignore="NestedWeights">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni Vaka"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_newCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14242"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yeni Ölüm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_newDeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14242"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#0E7F7F"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif Vaka"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleSize" />

                <TextView
                    android:id="@+id/txt_activeCases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14242"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dataSize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Countries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>